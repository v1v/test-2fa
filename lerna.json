{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "registry": "https://registry.npmjs.org",
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "lerna"
      ],
      "message": "chore(release): publish %s"
    },
    "version": {
      "allowBranch": [
        "master",
        "lerna"
      ],
      "conventionalCommits": true,
      "gitRemote": "origin"
    }
  },
  "ignoreChanges": [
    "**/*.md"
  ]
}
